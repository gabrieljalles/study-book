<link rel="stylesheet" href="css/styles.css">

<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Tought creation</a>
    </div>
    <h3>Your toughts</h3>

    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a href="/toughts/edit/{{this.id}}" class="btn"> Editar</a>
                <form action="/toughts/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Excluir" class="btn">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyToughts}}
        <p>You donÂ´t have toughts, create now <a href="/toughts/add">Here!</a> </p>
    {{/if}}
</div>