<link rel="stylesheet" href="css/styles.css">

<div class="tought-form-container">
    <a href="/toughts/dashboard">Back</a>

    <h1>Editing a tought</h1>

    <form action="/toughts/edit" method="POST">
        <input type="hidden" name="id" value ="{{tought.id}}"/>

        <div class="form-control">
            <label for="title">Title:</label>
            <input type="text" name="title" placeholder="write the title of tought" value="{{tought.title}}"> 
           
        </div>
        <input type="submit" value="Edit your tought!">

    </form>
</div>